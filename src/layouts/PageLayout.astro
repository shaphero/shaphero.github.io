---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import CTASection from '../components/CTASection.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  showHeader?: boolean;
  showCTA?: boolean;
  headerOffset?: boolean;
  schemaType?: 'website' | 'article' | 'service' | 'person';
  datePublished?: string;
  dateModified?: string;
  serviceName?: string;
  priceRange?: string;
}

const { 
  title, 
  description, 
  image,
  showHeader = true,
  showCTA = true,
  headerOffset = true,
  schemaType,
  datePublished,
  dateModified,
  serviceName,
  priceRange
} = Astro.props;
---

<BaseLayout 
  title={title} 
  description={description} 
  image={image}
  schemaType={schemaType}
  datePublished={datePublished}
  dateModified={dateModified}
  serviceName={serviceName}
  priceRange={priceRange}
>
  {showHeader && <Header />}
  
  <main class={headerOffset ? "pt-20" : ""}>
    <slot />
    
    {showCTA && <CTASection />}
  </main>
</BaseLayout>