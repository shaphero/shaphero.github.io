---
import Icon from './Icon.astro';

const services = [
  { 
    href: '/best-ai-coding', 
    label: 'üî• AI Coding Guide',
    description: '2025 model analysis with real data',
    icon: 'code'
  },
  { 
    href: '/seo-success', 
    label: 'SEO Success',
    description: '509% growth case study',
    icon: 'chart-growth'
  },
  { 
    href: '/ai-training', 
    label: 'AI Training',
    description: 'Transform your team into AI power users',
    icon: 'cpu'
  },
  { 
    href: '/ai-tools-mastery', 
    label: 'üöÄ AI Tools Mastery',
    description: 'Master ChatGPT, Claude Code, n8n & more',
    icon: 'sparkles'
  },
  { 
    href: '/ai-roi-analysis', 
    label: 'üìä AI ROI Analysis',
    description: 'Data from 1,000+ implementations',
    icon: 'chart-growth'
  },
  { 
    href: '/ai-training/san-diego', 
    label: 'üìç San Diego AI Training',
    description: 'Local on-site training for SD businesses',
    icon: 'location'
  },
  { 
    href: '/marketing-strategy', 
    label: 'Marketing Strategy',
    description: 'Evidence-based marketing that works',
    icon: 'analytics'
  },
];

const currentPath = Astro.url.pathname;

// You can change this to any of these options:
// "How I Help" / "Solutions" / "Services" / "Work With Me" / "Expertise"
const dropdownLabel = "How I Help";
---

<header class="fixed top-0 w-full py-4 px-6 bg-white/95 backdrop-blur-md border-b border-gray-200 z-50">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <!-- Logo - Now Clickable -->
    <a href="/" class="flex items-center group">
      <div class="w-14 h-14 bg-blue-600 rounded-xl flex items-center justify-center shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105">
        <span class="text-white font-black text-xl">DS</span>
      </div>
    </a>
    
    <!-- Center Navigation with Dropdown -->
    <nav class="hidden md:flex items-center gap-8 absolute left-1/2 -translate-x-1/2">
      <div class="relative group">
        <button class="text-sm font-medium text-muted-foreground hover:text-primary transition-all duration-300 flex items-center gap-2 py-2">
          {dropdownLabel}
          <Icon name="chevron-down" class="transition-transform duration-300 group-hover:rotate-180" size="sm" />
        </button>
        
        <!-- Dropdown Menu -->
        <div class="absolute top-full left-1/2 -translate-x-1/2 mt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
          <div class="bg-white/95 backdrop-blur-md rounded-2xl shadow-xl border border-border/20 p-2 min-w-[320px]">
            {services.map((service) => (
              <a 
                href={service.href}
                class={`block px-4 py-3 rounded-lg hover:bg-muted/50 transition-all duration-200 group/item ${
                  currentPath === service.href ? 'bg-muted/30' : ''
                }`}
              >
                <div class="flex items-center justify-between">
                  <div class="flex items-start gap-3">
                    <Icon name={service.icon} class={`flex-shrink-0 mt-0.5 ${
                      currentPath === service.href ? 'text-primary' : 'text-muted-foreground'
                    } group-hover/item:text-primary transition-colors`} size="sm" />
                    <div>
                      <div class={`font-medium text-sm mb-1 ${
                        currentPath === service.href ? 'text-primary' : 'text-foreground'
                      } group-hover/item:text-primary transition-colors`}>
                        {service.label}
                      </div>
                      <div class="text-xs text-muted-foreground">
                        {service.description}
                      </div>
                    </div>
                  </div>
                  <Icon name="arrow-right" class="text-muted-foreground group-hover/item:text-primary transition-all duration-200 opacity-0 group-hover/item:opacity-100 -translate-x-2 group-hover/item:translate-x-0" size="sm" />
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>
      
      <!-- About Link -->
      <a href="/#philosophy" class="text-sm font-medium text-muted-foreground hover:text-primary transition-all duration-300">
        About
      </a>
    </nav>
    
    <!-- CTA Button -->
    <div class="flex items-center gap-4">
      <!-- Mobile Menu Button -->
      <button 
        id="mobile-menu-btn"
        class="md:hidden w-10 h-10 flex items-center justify-center rounded-lg hover:bg-muted/50 transition-colors"
        aria-label="Toggle menu"
      >
        <Icon name="menu" class="text-foreground" />
      </button>
      
      <a href="mailto:dave@daveshap.com?subject=Ready%20to%20get%20started"
         class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-bold inline-flex items-center transition-all">
        <Icon name="mail" class="mr-2" size="sm" />
        <span class="hidden sm:inline">GET STARTED</span>
        <span class="sm:hidden">START</span>
        <Icon name="arrow-right" class="ml-2 group-hover:translate-x-1 transition-transform" size="sm" />
      </a>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="md:hidden absolute top-full left-0 right-0 bg-background/95 backdrop-blur-md border-b border-border opacity-0 invisible transition-all duration-300">
    <nav class="max-w-7xl mx-auto px-6 py-4 space-y-2">
      <div class="text-xs font-semibold text-muted-foreground uppercase tracking-wider mb-2">{dropdownLabel}</div>
      {services.map((service) => (
        <a 
          href={service.href}
          class={`block py-3 px-3 rounded-lg transition-all duration-300 hover:bg-muted/50 ${
            currentPath === service.href 
              ? 'bg-muted/30' 
              : ''
          }`}
        >
          <div class="flex items-start gap-3">
            <Icon name={service.icon} class={`flex-shrink-0 mt-0.5 ${
              currentPath === service.href ? 'text-primary' : 'text-muted-foreground'
            }`} size="sm" />
            <div>
              <div class={`text-sm font-medium ${
                currentPath === service.href 
                  ? 'text-primary' 
                  : 'text-foreground'
              }`}>
                {service.label}
              </div>
              <div class="text-xs text-muted-foreground mt-1">
                {service.description}
              </div>
            </div>
          </div>
        </a>
      ))}
      <div class="border-t border-border/50 my-3"></div>
      <a 
        href="/#philosophy"
        class="block py-2 text-sm font-medium text-muted-foreground hover:text-primary transition-all duration-300"
      >
        About
      </a>
    </nav>
  </div>
</header>

<style>
  #mobile-menu.active {
    @apply opacity-100 visible;
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('active');
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
        mobileMenu.classList.remove('active');
      }
    });
  }
</script>