---
export interface Props {
  id?: string;
  background?: 'white' | 'cream' | 'gradient' | 'transparent';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  paddingX?: 'none' | 'compact' | 'responsive';
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '4xl' | '6xl' | '7xl';
  center?: boolean;
}

const {
  id,
  background = 'white',
  padding = 'lg',
  paddingX = 'responsive',
  maxWidth = '6xl',
  center = true
} = Astro.props as Props;

const bgClasses = {
  white: 'bg-white',
  cream: 'bg-background',
  gradient: 'bg-gradient-hero',
  transparent: 'bg-transparent'
};

const paddingClasses = {
  sm: 'py-12',
  md: 'py-16', 
  lg: 'py-20',
  xl: 'py-32'
};

const paddingXClasses = {
  none: '',
  compact: 'px-4 sm:px-6',
  responsive: 'px-4 sm:px-6 lg:px-8'
};

const maxWidthClasses = {
  sm: 'max-w-2xl',
  md: 'max-w-3xl',
  lg: 'max-w-4xl',
  xl: 'max-w-5xl',
  '2xl': 'max-w-6xl',
  '4xl': 'max-w-4xl',
  '6xl': 'max-w-6xl',
  '7xl': 'max-w-7xl'
};
---

<section 
  id={id}
  class={`${bgClasses[background]} ${paddingClasses[padding]} ${paddingXClasses[paddingX]} relative overflow-hidden`}
>
  <div class={`${maxWidthClasses[maxWidth]} ${center ? 'mx-auto' : ''}`}>
    <slot />
  </div>
</section>
