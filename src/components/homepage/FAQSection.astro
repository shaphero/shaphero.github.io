    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <details class="group bg-gray-800/50 backdrop-blur-sm rounded-xl border border-gray-700 hover:border-primary/50 transition-all duration-300">
          <summary class="flex items-start justify-between p-6 cursor-pointer">
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-white group-hover:text-primary transition-colors">
                {faq.question}
              </h3>
              <span class="inline-flex items-center gap-1 mt-2 text-xs text-gray-500">
