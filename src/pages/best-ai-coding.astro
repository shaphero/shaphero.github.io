  { type: 'Distinctive Brand Assets', channels: 'Social, Display, Video', goal: 'Ownable brand codes' },
  { type: 'Category Education', channels: 'Guides, Webinars, Tools', goal: 'Build the category' },
  { type: 'Activation Content', channels: 'Email, Retargeting, PPC', goal: 'Convert existing demand' },
];

const aiTools = [
  { tool: 'Claude/GPT', use: 'Long-form brand content', strength: 'Maintains brand voice' },
  { tool: 'Midjourney/DALL-E', use: 'Distinctive visual assets', strength: 'Ownable brand imagery' },
  { tool: 'ElevenLabs', use: 'Brand audio/voice', strength: 'Sonic branding at scale' },
  { tool: 'Synthesia', use: 'Video brand content', strength: 'Scale video across channels' },
];
