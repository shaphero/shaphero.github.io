const painPoints = [
  {
    icon: "clock",
    title: "Innovation Speed Pressure", 
    description: "Tech and biotech companies need to accelerate product development cycles while maintaining quality and regulatory compliance."
  },
  {
    icon: "chart-down",
    title: "Technical Documentation Overload",
    description: "Complex products require extensive documentation, regulatory filings, and technical specifications that slow down time-to-market."
  },
  {
    icon: "users",
    title: "Cross-Functional Communication",
    description: "Engineering, product, and business teams struggle to communicate effectively across different technical domains and priorities."
  }
];

const localBenefits = [
  {
    title: "Accelerate Product Development",
    description: "Use AI to generate technical specifications, user stories, and development documentation that speeds up engineering cycles without sacrificing quality."
  },
  {
