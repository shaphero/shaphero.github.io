const businessTypes = [
  "medical practices",
  "healthcare clinics", 
  "professional services",
  "legal firms",
  "retail businesses",
  "wellness centers"
];

const painPoints = [
  {
    icon: "clock",
    title: "Administrative Overload", 
    description: "Healthcare providers spend more time on documentation and billing than actual patient care."
  },
  {
    icon: "users",
    title: "Patient Communication Gaps",
    description: "Busy practices struggle to provide timely, personalized communication that patients expect in today's healthcare environment."
  },
  {
    icon: "chart-down",
    title: "Compliance Documentation Burden",
    description: "Meeting regulatory requirements for patient records, billing, and reporting consumes valuable staff time."
  }
];

const localBenefits = [
  {
    title: "Streamline Healthcare Administration",
    description: "Automate patient intake forms, appointment reminders, and follow-up communications while maintaining HIPAA compliance."
  },
  {
    title: "Enhance Patient Care Documentation", 
    description: "Generate comprehensive patient summaries, treatment plans, and progress notes that improve care continuity and compliance."
  },
  {
    title: "Optimize Practice Management",
    description: "Create efficient scheduling systems, billing summaries, and staff communications that reduce administrative burden on medical professionals."
  },
  {
    title: "Improve Professional Service Delivery",
    description: "Generate client reports, case summaries, and professional correspondence that enhance service quality while reducing preparation time."
  }
];

