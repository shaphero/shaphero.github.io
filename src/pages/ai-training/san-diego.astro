    url: "/ai-training/san-diego/encinitas",
    description: "Wellness businesses, surf industry, retail",
    industries: ["Wellness", "Surf", "Retail"],
    highlight: "Surf & wellness capital"
  },
  {
    name: "Chula Vista",
    url: "/ai-training/san-diego/chula-vista",
    description: "Diverse businesses, healthcare, retail",
    industries: ["Healthcare", "Retail", "Services"],
    highlight: "South Bay business hub"
  },
  {
    name: "Escondido",
    url: "/ai-training/san-diego/escondido",
