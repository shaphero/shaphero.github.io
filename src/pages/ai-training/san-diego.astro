    industries: ["Startups", "Tech", "Creative"],
    highlight: "Gaslamp & Little Italy hub"
  },
  {
    name: "Sorrento Valley",
    url: "/ai-training/san-diego/sorrento-valley",
    description: "Tech corridor, biotech hub, R&D centers",
    industries: ["Tech", "Biotech", "R&D"],
    highlight: "San Diego's tech capital"
  },
  {
    name: "Carlsbad",
    url: "/ai-training/san-diego/carlsbad",
    description: "North County businesses, corporate offices",
    industries: ["Corporate", "Golf", "Tourism"],
    highlight: "North County business center"
  },
  {
    name: "Del Mar",
    url: "/ai-training/san-diego/del-mar",
    description: "Executive teams, luxury hospitality, finance",
    industries: ["Finance", "Hospitality", "Real Estate"],
    highlight: "Executive & luxury market"
  },
  {
    name: "UTC / La Jolla Village",
    url: "/ai-training/san-diego/utc",
    description: "Corporate headquarters, finance, professional services",
    industries: ["Corporate", "Finance", "Tech"],
    highlight: "Major corporate center"
  },
  {
    name: "Carmel Valley",
    url: "/ai-training/san-diego/carmel-valley",
    description: "Tech companies, biotech, corporate offices",
    industries: ["Tech", "Biotech", "Professional"],
    highlight: "Family-friendly tech hub"
  },
  {
    name: "Rancho Bernardo",
    url: "/ai-training/san-diego/rancho-bernardo",
    description: "Corporate offices, manufacturing, tech",
    industries: ["Manufacturing", "Tech", "Corporate"],
    highlight: "North inland business district"
  },
  {
    name: "Mission Valley",
    url: "/ai-training/san-diego/mission-valley",
    description: "Retail, hospitality, corporate centers",
    industries: ["Retail", "Hospitality", "Healthcare"],
    highlight: "Central business corridor"
  },
  {
    name: "Coronado",
