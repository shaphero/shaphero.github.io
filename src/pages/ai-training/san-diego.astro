    description: "Established businesses, professional services",
    industries: ["Professional", "Legal", "Finance"],
    highlight: "Historic business district"
  },
  {
    name: "Pacific Beach",
    url: "/ai-training/san-diego/pacific-beach",
    description: "Tourism, real estate, hospitality",
    industries: ["Tourism", "Real Estate", "Hospitality"],
    highlight: "Beach & tourism economy"
