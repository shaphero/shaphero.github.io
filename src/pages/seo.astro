---
import PageLayout from '../layouts/PageLayout.astro';
import HeroSection from '../components/HeroSection-Perfect.astro';
import ProblemsSection from '../components/ProblemsSection.astro';
import ApproachSection from '../components/ApproachSection.astro';
import BrandLogos from '../components/common/BrandLogos.astro';
import SEOTruthSection from '../components/SEOTruthSection.astro';
import WhoWeWorkWith from '../components/WhoWeWorkWith.astro';
import ResultsSection from '../components/ResultsSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import AboutSection from '../components/AboutSection.astro';
import CTASection from '../components/CTASection.astro';

const title = "Dave Shapiro SEO Expert | 509% Traffic Growth | Proven SEO Strategy";
const description = "Get measurable SEO results fast. Dave Shapiro helped SoFi grow 509% traffic & 22K+ customers, Adobe 25K+ downloads. Stop wasting money on ineffective SEO. Book free strategy call.";
---

<PageLayout 
  title={title} 
  description={description}
  showHeader={true}
  showCTA={false}
  schemaType="service"
  serviceName="SEO Consulting & Strategy"
  priceRange="Contact for pricing"
>
  <HeroSection />
  <ProblemsSection />
  <ApproachSection />
  <BrandLogos variant="text" />
  <SEOTruthSection />
  <WhoWeWorkWith />
  <ResultsSection />
  <TestimonialsSection />
  <AboutSection />
  <CTASection />
</PageLayout>