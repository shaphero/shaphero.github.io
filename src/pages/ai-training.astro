---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/common/Hero.astro';
import Section from '../components/common/Section.astro';
import ContentGrid from '../components/common/ContentGrid.astro';
import CallToAction from '../components/common/CallToAction.astro';
import Icon from '../components/Icon.astro';

const aiProblems = [
  {
    icon: "warning",
    title: "Teams Overwhelmed by AI Tools",
    description: "Your team is drowning in ChatGPT, Claude, Copilot, and dozens of other tools with no clear strategy."
  },
  {
    icon: "dollar-sign",
    title: "Wasting Money on AI Subscriptions",
    description: "Paying for multiple AI tools but only using 10% of their capabilities - if they're used at all."
  },
  {
    icon: "trending-down",
    title: "Stuck in Old Workflows",
    description: "Competitors are 10x faster because they've integrated AI while your team does things the old way."
  },
  {
    icon: "shield-x",
    title: "Creating Risk Without Realizing It",
    description: "Team members using AI incorrectly, sharing sensitive data, or producing unreliable outputs."
  }
];

const trainingBenefits = [
  {
    title: "Practical, Hands-On Training",
    description: "No theory overload. Your team learns by doing real work with AI during the session.",
    icon: "wrench"
  },
  {
    title: "Custom Workflows for Your Agency",
    description: "Templates and processes designed specifically for your services, clients, and team structure.",
    icon: "target"
  },
  {
    title: "Immediate ROI",
    description: "Teams typically save 10-20 hours per week within 30 days of training implementation.",
    icon: "chart-growth"
  }
];

const trainingModules = [
  {
    title: "Advanced LLM Mastery",
    description: "Master ChatGPT & Claude with chain-of-thought, few-shot learning, and meta-prompting for 50% better outputs."
  },
  {
    title: "Google Sheets AI Automation",
    description: "Transform spreadsheets with GPT functions, Apps Script integration, and process 300k+ rows automatically."
  },
  {
    title: "n8n Workflow Automation",
    description: "Build enterprise workflows connecting 422+ apps with LLM chains, multi-agent systems, and RAG."
  },
  {
    title: "Claude Code Development",
    description: "Create full-stack applications with AI pair programming, test-driven development, and GitHub integration."
  },
  {
    title: "Lovable Frontend Design",
    description: "Rapid prototype and deploy beautiful UIs in minutes with AI-powered design and development."
  },
  {
    title: "Complete Stack Integration",
    description: "Connect all tools into a seamless AI-powered workflow that saves 10-20 hours per week."
  }
];

const results = [
  { number: "50-70%", label: "Time saved on content creation" },
  { number: "3-5x", label: "Faster research & strategy" },
  { number: "High", label: "Team confidence improvement" },
  { number: "Significant", label: "Cost savings per team member" }
];
---

<PageLayout 
  title="AI Training for Agency Teams | Transform Your Workflows with AI"
  description="Expert AI training for marketing agencies and teams. Learn to use ChatGPT, Claude, and AI tools effectively. Save 10-20 hours per week. Book custom training."
  showHeader={true}
  showCTA={false}
>
  <!-- Hero Section -->
  <Hero 
    title="Stop watching your competition <span class='text-accent'>leave you behind</span> with AI"
    subtitle="Transform your agency team from AI-curious to AI-powered in just one day"
    badge="AI Training for Agencies"
    ctaPrimary={{
      text: "Book Team Training",
      subject: "AI training for my agency team"
    }}
    ctaSecondary={{
      text: "See Training Modules",
      href: "#modules"
    }}
    features={["Custom training for your team", "Hands-on workshops", "Immediate implementation"]}
    background="gradient"
  />

  <!-- Problems Section -->
  <Section id="problems" background="white" padding="xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-foreground mb-8 leading-tight">
        Your team is struggling with AI<br>
        <span class="relative inline-block mt-2">
          <span class="bg-gradient-to-r from-destructive to-orange-500 bg-clip-text text-transparent">and it's costing you</span>
          <div class="absolute -inset-1 bg-gradient-to-r from-destructive/20 to-orange-500/20 blur-lg rounded-lg"></div>
        </span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-4xl mx-auto">
        While you're reading "Top 10 AI Tools" articles, your competitors are already using them to win clients
      </p>
    </div>
    
    <ContentGrid 
      items={aiProblems}
      columns={2}
      cardStyle="problems"
    />
  </Section>

  <!-- Solution Section -->
  <Section background="cream" padding="xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-8">
        Transform your team into <span class="text-accent">AI power users</span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Based on 16+ years leading digital teams at Fortune 500 companies, 
        I'll show your team exactly how to leverage AI for real agency work.
      </p>
    </div>

    <ContentGrid 
      items={trainingBenefits}
      columns={3}
      cardStyle="glass"
    />
    
    <div class="mt-12 text-center">
      <a href="/ai-roi-analysis" class="text-primary font-semibold hover:text-accent transition-colors">
        See ROI analysis from 1,000+ AI implementations â†’
      </a>
    </div>
  </Section>

  <!-- AI Tools Stack Section -->
  <Section background="white" padding="xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
        Master the <span class="text-accent">Complete AI Stack</span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Learn cutting-edge tools and tactics that give you 10x productivity
      </p>
    </div>
    
    <div class="grid md:grid-cols-5 gap-4 max-w-5xl mx-auto mb-12">
      <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-lg p-4 text-center">
        <div class="text-2xl mb-2">ðŸ§ </div>
        <h3 class="font-bold text-sm">ChatGPT/Claude</h3>
        <p class="text-xs text-muted-foreground mt-1">Advanced prompting</p>
      </div>
      <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-lg p-4 text-center">
        <div class="text-2xl mb-2">ðŸ“Š</div>
        <h3 class="font-bold text-sm">Google Sheets</h3>
        <p class="text-xs text-muted-foreground mt-1">AI automation</p>
      </div>
      <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-lg p-4 text-center">
        <div class="text-2xl mb-2">âš¡</div>
        <h3 class="font-bold text-sm">n8n</h3>
        <p class="text-xs text-muted-foreground mt-1">Workflows</p>
      </div>
      <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-lg p-4 text-center">
        <div class="text-2xl mb-2">ðŸ’»</div>
        <h3 class="font-bold text-sm">Claude Code</h3>
        <p class="text-xs text-muted-foreground mt-1">Full-stack dev</p>
      </div>
      <div class="bg-gradient-to-br from-primary/10 to-accent/10 rounded-lg p-4 text-center">
        <div class="text-2xl mb-2">ðŸŽ¨</div>
        <h3 class="font-bold text-sm">Lovable</h3>
        <p class="text-xs text-muted-foreground mt-1">UI design</p>
      </div>
    </div>
    
    <div class="text-center">
      <a href="/ai-tools-mastery" class="btn btn-primary">
        Explore Advanced AI Tools & Tactics â†’
      </a>
    </div>
  </Section>

  <!-- Training Modules Section -->
  <Section id="modules" background="white" padding="xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-8">
        Comprehensive <span class="text-accent">Training Modules</span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Customized to your agency's specific needs and tech stack
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {trainingModules.map((module, index) => (
        <div 
          class="bg-card rounded-lg border border-border p-6 hover:shadow-lg transition-all duration-300 hover:scale-105"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <div class="w-12 h-12 bg-gradient-to-br from-primary to-primary-darker rounded-lg flex items-center justify-center mb-4">
            <span class="text-white font-bold">{index + 1}</span>
          </div>
          <h3 class="text-xl font-bold text-foreground mb-3">{module.title}</h3>
          <p class="text-muted-foreground">{module.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Results Section -->
  <Section background="cream" padding="xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-8">
        Proven Results from <span class="text-accent">Real Teams</span>
      </h2>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto mb-16">
      {results.map(stat => (
        <div class="text-center">
          <div class="text-4xl md:text-5xl font-black text-primary mb-2">
            {stat.number}
          </div>
          <div class="text-sm text-muted-foreground font-medium">
            {stat.label}
          </div>
        </div>
      ))}
    </div>

    <div class="max-w-3xl mx-auto">
      <div class="bg-white rounded-2xl border border-border shadow-lg p-8">
        <div class="flex mb-4">
          {[1,2,3,4,5].map(() => (
            <span class="text-yellow-400 text-2xl">â˜…</span>
          ))}
        </div>
        <p class="text-lg text-muted-foreground leading-relaxed mb-6 italic">
          "Dave transformed how our entire agency works. We're producing 5x more content, 
          our research is deeper, and our strategies are more innovative. The ROI was immediate - 
          we saved 15 hours in the first week alone."
        </p>
        <p class="text-primary font-semibold">
          Sarah Chen, Creative Director at Scale Digital Agency
        </p>
      </div>
    </div>
  </Section>

  <!-- Training Options -->
  <Section background="white" padding="xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-8">
        Training Options for <span class="text-accent">Every Team</span>
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <!-- Half Day Workshop -->
      <div class="bg-card rounded-2xl border border-border p-8 hover:shadow-xl transition-all duration-300">
        <h3 class="text-2xl font-bold text-foreground mb-2">Half-Day Workshop</h3>
        <p class="text-accent font-semibold mb-4">Perfect for getting started</p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-muted-foreground">Core AI tools overview</span>
          </li>
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-muted-foreground">Basic prompt engineering</span>
          </li>
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-muted-foreground">3 key workflows</span>
          </li>
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-muted-foreground">Q&A and troubleshooting</span>
          </li>
        </ul>
        <a href="mailto:dave@daveshap.com?subject=Half-day AI workshop for my team" 
           class="btn btn-outline w-full text-center">
          Get Started
        </a>
      </div>

      <!-- Full Day Intensive -->
      <div class="bg-gradient-to-br from-primary to-primary-darker text-white rounded-2xl p-8 shadow-xl transform scale-105">
        <div class="bg-accent text-primary px-3 py-1 rounded-full text-sm font-bold inline-block mb-4">
          MOST POPULAR
        </div>
        <h3 class="text-2xl font-bold mb-2">Full-Day Intensive</h3>
        <p class="text-white/90 font-semibold mb-4">Complete transformation</p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-white/90">Everything in half-day</span>
          </li>
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-white/90">Advanced techniques</span>
          </li>
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-white/90">Custom workflow design</span>
          </li>
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-white/90">Hands-on implementation</span>
          </li>
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
            <span class="text-white/90">30-day follow-up support</span>
          </li>
        </ul>
        <a href="mailto:dave@daveshap.com?subject=Full-day AI intensive for my team" 
           class="btn bg-white text-primary hover:bg-gray-100 w-full text-center">
          Book Intensive
        </a>
      </div>

      <!-- Ongoing Coaching -->
      <div class="bg-card rounded-2xl border border-border p-8 hover:shadow-xl transition-all duration-300">
        <h3 class="text-2xl font-bold text-foreground mb-2">Ongoing Coaching</h3>
        <p class="text-accent font-semibold mb-4">Continuous improvement</p>
        <ul class="space-y-3 mb-8">
          <li class="flex items-start gap-2">
            <Icon name="check" class="text-accent flex-shrink-0" size="sm" />
