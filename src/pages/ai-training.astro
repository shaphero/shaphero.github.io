  <!-- AI Tools Stack Section -->
  <Section background="white" padding="xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
        Master the <span class="text-accent">Complete AI Stack</span>
      </h2>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Learn cutting-edge tools and tactics that give you 10x productivity
