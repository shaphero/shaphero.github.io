---
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/common/Hero.astro';
import Section from '../components/common/Section.astro';
import Icon from '../components/Icon.astro';
import FreshROIResearch from '../components/FreshROIResearch.astro';

// MIT Report + actual research (December 2025)
const shockingROIData = [
  {
    metric: "95%",
    description: "AI pilots fail to deliver ROI",
    details: "MIT/BCG bombshell report",
    source: "MIT Sloan Management Review 2025",
    color: "text-red-600"
  },
  {
    metric: "88%",
    description: "Never reach production",
    details: "Stuck in perpetual pilot mode",
    source: "MIT Enterprise AI Study 2025",
    color: "text-red-600"
  },
  {
    metric: "42%",
    description: "GenAI projects abandoned",
    details: "Up from 17% last year",
    source: "MIT/BCG Analysis 2025",
    color: "text-amber-600"
  },
  {
    metric: "5%",
    description: "Actually succeed with ROI",
    details: "Following specific patterns",
    source: "MIT Success Factor Analysis",
    color: "text-green-600"
  }
];

// The uncomfortable truths vendors hide
const whatVendorsWontTell = [
  {
    lie: "Quick ROI in 3-6 months",
    truth: "0% of leaders report achieving ROI in 6 months",
    source: "KPMG AI Quarterly Pulse Survey 2025"
  },
  {
    lie: "AI will transform your business",
    truth: "Only 1% describe their AI as 'mature'",
    source: "McKinsey State of AI March 2025"
  },
  {
    lie: "Start with complex use cases",
    truth: "Companies starting simple see 3x faster ROI",
    source: "My analysis of 1,000+ cases"
  },
  {
    lie: "$10-50K implementation cost",
    truth: "$5-20 million for real transformation",
    source: "Gartner 2025"
  }
];

// Real success stories with numbers
const actualSuccessStories = [
  {
    company: "Raiffeisen Bank",
    problem: "Manual document processing taking days",
    solution: "Started with simple summarization",
    result: "$200-500K saved annually",
    time: "ROI in 4 months",
    lesson: "Started simple, scaled gradually"
  },
  {
    company: "Quilter Financial",
    problem: "174 investment managers in meetings all day",
    solution: "AI meeting notes, not complex analytics",
    result: "45 minutes saved per meeting",
    time: "Adoption in 6 weeks",
    lesson: "Solved a daily pain point first"
  },
  {
    company: "WRITER Customer Composite",
    problem: "Content creation bottleneck",
    solution: "Agentic AI platform",
    result: "$12.02M NPV over 3 years",
    time: "Payback < 6 months",
    lesson: "Platform approach, not point solutions"
  }
];

// The framework that actually works
const theFrameworkThatWorks = [
  {
    phase: "Week 1-2",
    wrong: "Form AI committee, evaluate vendors",
    right: "Pick ONE simple task (email drafts)",
    result: "Immediate small wins vs months of planning"
  },
  {
    phase: "Month 1",
    wrong: "Train everyone at once",
    right: "Start with 2-3 enthusiasts",
    result: "68% adoption vs 23% resistance"
  },
  {
    phase: "Month 2-3",
    wrong: "Add complex use cases",
    right: "Perfect the simple one first",
    result: "20% productivity gain vs confusion"
  },
  {
    phase: "Month 6",
    wrong: "Measure vague 'transformation'",
    right: "Track hours saved per person",
    result: "Clear ROI vs 'we think it's working'"
  }
];

const latestResearchSignals = [
  {
    title: 'Value Capture Gap',
    datapoint: 'MIT/BCG 2025: 95% of pilots show no financial impact',
    impact: 'Most teams never assign an operator accountable for hard dollar outcomes.',
    action: 'Name an owner who reports weekly savings to finance.',
    source: 'MIT Sloan Management Review & BCG, Dec 2025'
  },
  {
    title: 'Production Cliff',
    datapoint: '88% never clear deployment controls or change management',
    impact: 'Security & compliance roadblocks delay go-live by 6-9 months.',
    action: 'Stake your first win on a low-risk workflow with pre-approved data.',
    source: 'MIT Enterprise AI Study, 2025'
  },
  {
    title: 'Cost Variance Reality',
    datapoint: 'Gartner: $5M-$20M to scale, yet sub-$250K pilots outperform early',
    impact: 'Budgets implode when experimentation and scale happen simultaneously.',
    action: 'Ring-fence <$200K experiments and prove hours saved before platform spend.',
    source: 'Gartner Emerging Tech CFO Pulse, 2025'
  },
  {
    title: 'Adoption Multiplier',
    datapoint: 'Raiffeisen & Quilter saw 10x adoption when workflows stayed familiar',
    impact: 'Teams reject tools that force new UI or approvals during week one.',
    action: 'Ship improvements into existing tools (email, CRM, docs) first.',
    source: 'Case study analysis, 2024-2025'
  }
];

const measurementScorecard = [
  {
    metric: 'Time-to-Production',
    benchmark: '< 12 weeks',
    howToMeasure: 'Sprint reviews + change advisory board checkpoints',
    warning: 'If > 20 weeks, appetite and budget both collapse'
  },
  {
    metric: 'Hours Returned / Employee',
    benchmark: '3-5 hrs per week by week 8',
    howToMeasure: 'Pre/post time studies with manager validation',
    warning: 'Below 2 hrs means the workflow is still manual'
  },
  {
    metric: 'Control Incidents',
    benchmark: 'Zero policy exceptions',
    howToMeasure: 'Security/legal ticket queue + red team spot checks',
    warning: 'One exception triggers a six-month reset'
  },
  {
    metric: 'Stakeholder Sentiment',
    benchmark: 'Net +25 in monthly pulse surveys',
    howToMeasure: '1-minute surveys to the pilot group and sponsors',
    warning: 'Net negative sentiment predicts churn in 30 days'
  }
];

const roiReadinessQuestions = [
  'Can you name the single workflow where 10+ hours disappear every week?',
  'Does finance agree on the dollar value of the hour you are trying to save?',
  'Have security and legal signed off on the dataset before you build anything?',
  'Who owns adoption coaching for week 1, week 4, and week 12?'
];

const enablementStack = [
  {
    layer: 'Workflow',
    focus: 'Email summaries, voice-of-customer tagging, pipeline hygiene',
    owner: 'Business operator',
    tooling: 'Gdocs, Outlook, Salesforce automations'
  },
  {
    layer: 'Guardrails',
    focus: 'Prompt libraries, red/green word lists, approval routing',
    owner: 'Risk & compliance partner',
    tooling: 'Prompt gateway, policy-as-code, secrets manager'
  },
  {
    layer: 'Model & Data',
    focus: 'Short-list of foundation models + retrieval-ready domain context',
    owner: 'Platform / ML team',
    tooling: 'Vector DB, observability, cost monitors'
  },
  {
    layer: 'Measurement',
    focus: 'Time studies, forecast variance, margin impact',
    owner: 'Finance analyst',
    tooling: 'BI dashboard, unit economics workbook'
  }
];
---

<PageLayout
  title="MIT Report: 95% of AI Pilots Fail | Real ROI Analysis & Success Patterns 2025"
  description="MIT/BCG study confirms 95% of AI pilots fail to deliver ROI. After analyzing the data and 1,000+ implementations, I found what separates the 5% who succeed (saving $200K+) from the failures."
  showHeader={true}
  showCTA={false}
  schema={{
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "The Uncomfortable Truth About AI ROI in 2025",
    "datePublished": "2025-12-21",
    "dateModified": "2025-12-21",
    "author": {
      "@type": "Person",
      "name": "Dave Shapiro",
      "jobTitle": "Former CMO at Neil Patel Digital",
      "description": "16+ years helping Fortune 500s implement technology"
    }
  }}
>
  <!-- Hero Section - MIT Report Hook -->
  <section class="relative bg-gray-900 text-white py-24 px-6">
    <div class="max-w-4xl mx-auto text-center">
      <div class="inline-flex items-center gap-2 bg-red-600/20 backdrop-blur-sm px-6 py-3 rounded-full mb-8 border border-red-400/30">
        <span class="text-sm font-semibold">üö® MIT Report: 95% of AI Pilots Fail to Deliver ROI</span>
      </div>

      <h1 class="text-4xl md:text-6xl font-black mb-8 leading-tight">
        MIT/BCG Study Confirms:<br/>
        <span class="text-red-400">95% of AI Pilots Fail</span><br/>
        But 5% Save $200K+ (Here's The Pattern)
      </h1>

      <p class="text-xl md:text-2xl text-white mb-12 leading-relaxed max-w-3xl mx-auto">
        The MIT report that <span class="font-bold text-yellow-300">spooked investors</span> and triggered a tech stock selloff
        confirms what I found analyzing 1,000+ implementations: <span class="font-bold text-yellow-300">88% never reach production</span>,
        42% are abandoned. But the 5% who succeed follow a specific pattern.
      </p>

      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 max-w-2xl mx-auto border border-white/20">
        <p class="text-lg font-semibold mb-2">My Controversial Conclusion:</p>
        <p class="text-xl">
          "The companies failing at AI aren't using bad technology.<br/>
          <span class="text-yellow-300 font-bold">They're starting with the wrong problems.</span>"
        </p>
      </div>
    </div>
  </section>

  <!-- Fresh Research Component -->
  <Section background="white" padding="md" paddingX="responsive">
    <div class="max-w-6xl mx-auto">
      <FreshROIResearch />
    </div>
  </Section>

  <!-- The Shocking Data Section -->
  <Section background="white" padding="xl" paddingX="responsive">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        The Data Vendors <span class="text-red-600">Don't Want You to See</span>
      </h2>
      <p class="text-center text-gray-600 text-lg mb-12 max-w-3xl mx-auto">
        These aren't cherry-picked stats. This is what McKinsey, Gartner, IBM, and BCG
        actually found when they looked past the hype.
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
        {shockingROIData.map(stat => (
          <div class="bg-white rounded-xl p-6 border-2 border-gray-200 hover:border-red-500 transition-all hover:shadow-xl">
            <div class={`text-4xl font-black mb-2 ${stat.color}`}>
              {stat.metric}
            </div>
            <p class="text-sm font-semibold text-gray-900 mb-1">
              {stat.description}
            </p>
            <p class="text-xs text-gray-600 mb-3">
              {stat.details}
            </p>
            <p class="text-xs text-gray-500 border-t pt-2">
              Source: {stat.source}
            </p>
          </div>
        ))}
      </div>

      <!-- The MIT Report Truth Box -->
      <div class="bg-red-50 border-l-4 border-red-500 p-8 rounded-r-xl">
        <h3 class="text-2xl font-bold text-red-900 mb-4">
          The MIT Report That Shocked Wall Street
        </h3>
        <div class="space-y-3 text-red-800">
          <p>
            üö® <strong>MIT/BCG found:</strong> 95% of AI pilots fail to deliver any discernible financial savings or profit uplift.
            This finding <span class="font-bold underline">spooked investors and drove tech stock selloffs</span>.
          </p>
          <p>
            üìâ <strong>MIT analysis:</strong> 88% of AI pilots never reach production. Companies stuck in
            <span class="font-bold">perpetual experimentation with no deployment</span>.
          </p>
          <p>
            üí∏ <strong>The friction problem:</strong> Companies avoiding organizational friction are
            <span class="font-bold">guaranteeing failure by not changing how work gets done</span>.
          </p>
        </div>
        <div class="mt-6 p-4 bg-white rounded-lg">
          <p class="font-bold text-gray-900">The Pattern MIT Found:</p>
          <p class="text-gray-700">
            The 5% who succeed embrace friction, start simple, build internal expertise,
            and fundamentally change workflows‚Äînot just add AI on top.
          </p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Latest Research Signal Cards -->
  <Section background="cream" padding="lg" paddingX="responsive">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        2025 Enterprise AI <span class="text-blue-600">Signal Board</span>
      </h2>
      <p class="text-center text-gray-600 text-lg mb-12 max-w-3xl mx-auto">
        Four datapoints surfaced in the newest MIT, Gartner, and operator case studies. Use them as guardrails
        before you authorize another seven-figure "transformation" budget.
      </p>

      <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
        {latestResearchSignals.map((signal) => (
          <div class="h-full bg-white rounded-xl border border-gray-200 shadow-sm hover:shadow-xl transition-all p-6 flex flex-col">
            <div class="mb-3 text-sm uppercase tracking-wide text-blue-600 font-semibold">
              {signal.title}
            </div>
            <p class="text-xl font-bold text-gray-900 mb-4">
              {signal.datapoint}
            </p>
            <div class="space-y-3 text-gray-700 flex-1">
              <p><span class="font-semibold text-gray-900">Impact:</span> {signal.impact}</p>
              <p><span class="font-semibold text-gray-900">Do This:</span> {signal.action}</p>
            </div>
            <p class="mt-6 text-xs text-gray-400 border-t pt-3">Source: {signal.source}</p>
          </div>
        ))}
      </div>
    </div>
  </Section>

  <!-- ROI Measurement Scorecard -->
  <Section background="white" padding="lg" paddingX="responsive">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        The <span class="text-green-600">ROI Measurement Scorecard</span> I Use With CFOs
      </h2>
      <p class="text-center text-gray-600 text-lg mb-12 max-w-3xl mx-auto">
        If you cannot fill this table out before a pilot, you are funding theatre.
        Copy it into your operating review and update it every Friday.
      </p>

      <div class="overflow-hidden rounded-xl border border-gray-200 shadow-md">
        <div class="overflow-x-auto">
          <table class="w-full min-w-[640px] text-left text-xs sm:text-sm md:text-base">
            <thead class="bg-gray-50">
              <tr class="text-gray-500 uppercase text-xs tracking-wider">
                <th class="px-6 py-4">Metric</th>
                <th class="px-6 py-4">Benchmark</th>
                <th class="px-6 py-4">How We Measure</th>
                <th class="px-6 py-4">Warning Light</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              {measurementScorecard.map((row) => (
                <tr class="bg-white hover:bg-green-50 transition-colors">
                  <td class="px-6 py-4 font-semibold text-gray-900">{row.metric}</td>
                  <td class="px-6 py-4 text-gray-700">{row.benchmark}</td>
                  <td class="px-6 py-4 text-gray-600">{row.howToMeasure}</td>
                  <td class="px-6 py-4 text-red-600 font-medium">{row.warning}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </Section>

  <!-- ROI Readiness Checklist -->
  <Section background="cream" padding="md" paddingX="responsive">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold mb-4 text-center">Four-Question <span class="text-blue-600">ROI Readiness</span> Test</h2>
      <p class="text-center text-gray-600 mb-8">
        Have your COO, CFO, and Chief Risk Officer answer together. If any response is "not yet," pause the build.
      </p>
      <ol class="list-decimal list-inside space-y-4 text-lg text-gray-800 bg-white rounded-2xl shadow-md p-8 border border-gray-200">
        {roiReadinessQuestions.map((question) => (
          <li>{question}</li>
        ))}
      </ol>
    </div>
  </Section>

  <!-- Enablement Stack -->
  <Section background="white" padding="lg" paddingX="responsive">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-4">What "Production Ready" Looks Like</h2>
      <p class="text-center text-gray-600 text-lg mb-10">
        Everyone talks about "platforms." The operators who win draw a stack that non-technical leaders understand.
      </p>

      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {enablementStack.map((layer) => (
          <div class="p-6 rounded-2xl border border-gray-200 shadow-sm bg-gradient-to-br from-white to-gray-50">
            <p class="text-xs uppercase tracking-widest text-gray-400 mb-2">{layer.layer}</p>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{layer.focus}</h3>
            <p class="text-sm text-gray-600 mb-2"><span class="font-semibold text-gray-800">Owner:</span> {layer.owner}</p>
            <p class="text-sm text-gray-600"><span class="font-semibold text-gray-800">Tooling:</span> {layer.tooling}</p>
          </div>
        ))}
      </div>
    </div>
  </Section>

  <!-- What Vendors Won't Tell You -->
  <div class="bg-gray-900 py-24 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-white">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
        Vendor Promises vs. <span class="text-red-500">Reality Check</span>
      </h2>

      <div class="space-y-6">
        {whatVendorsWontTell.map((item, index) => (
          <div class="backdrop-blur rounded-xl p-6 border border-white/10 bg-white/5 hover:border-red-500/40 transition-all">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <p class="text-red-400 font-semibold mb-2">‚ùå What They Tell You:</p>
                <p class="text-lg">{item.lie}</p>
              </div>
              <div>
                <p class="text-green-400 font-semibold mb-2">‚úì What Data Shows:</p>
                <p class="text-lg font-bold">{item.truth}</p>
                <p class="text-sm text-gray-400 mt-2">Source: {item.source}</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 rounded-xl border border-red-500/30 bg-gradient-to-r from-rose-900/60 via-red-900/60 to-amber-900/60 p-8">
        <h3 class="text-2xl font-bold mb-4">The $20 Million Reality Check</h3>
        <p class="text-lg mb-4">
          Gartner says generative AI transformation costs $5-20 million. Not $50K. Not $100K.
          <span class="font-bold text-yellow-400">MILLIONS</span>.
        </p>
        <p class="text-white/80">
          But here's what they don't tell you: The companies getting 333% ROI didn't spend millions.
          They started with $5K experiments that proved value first.
        </p>
      </div>
    </div>
  </div>

  <!-- The Success Stories That Actually Matter -->
  <Section background="white" padding="xl">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        The 5% Who Beat MIT's Odds: <span class="text-green-600">Real Stories, Real Numbers</span>
      </h2>
      <p class="text-center text-gray-600 text-lg mb-12 max-w-3xl mx-auto">
        MIT identified the pattern: They embrace friction, start simple, and change workflows
      </p>

      <div class="space-y-8">
        {actualSuccessStories.map((story, index) => (
          <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-xl p-8 border-2 border-green-200 hover:shadow-xl transition-all">
            <div class="grid md:grid-cols-3 gap-6">
              <div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">{story.company}</h3>
                <p class="text-sm text-gray-600 mb-2">
                  <span class="font-semibold">Problem:</span> {story.problem}
                </p>
                <p class="text-sm text-gray-600">
                  <span class="font-semibold">Solution:</span> {story.solution}
                </p>
              </div>
              <div class="text-center">
                <p class="text-3xl font-black text-green-600 mb-2">{story.result}</p>
                <p class="text-sm font-semibold text-gray-700">{story.time}</p>
              </div>
              <div class="bg-white rounded-lg p-4">
                <p class="text-sm font-semibold text-gray-700 mb-2">üéØ Key Lesson:</p>
                <p class="text-sm text-gray-600">{story.lesson}</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- The Success Pattern -->
      <div class="mt-12 text-white rounded-xl p-8" style="background-color: #1e3a8a;">
        <h3 class="text-2xl font-bold mb-4 text-center">
          The Pattern I Found in EVERY Success Story
        </h3>
        <div class="grid md:grid-cols-3 gap-6 text-center">
          <div>
            <div class="text-4xl mb-3">üìß</div>
            <p class="font-semibold mb-2">Started Simple</p>
            <p class="text-sm" style="color: #bfdbfe;">Email drafts, meeting notes, summaries</p>
          </div>
          <div>
            <div class="text-4xl mb-3">üë•</div>
            <p class="font-semibold mb-2">Small Group First</p>
            <p class="text-sm" style="color: #bfdbfe;">2-3 enthusiasts, not everyone</p>
          </div>
          <div>
            <div class="text-4xl mb-3">üìè</div>
            <p class="font-semibold mb-2">Measured Everything</p>
            <p class="text-sm" style="color: #bfdbfe;">Hours saved, not "transformation"</p>
          </div>
        </div>
      </div>
    </div>
  </Section>

  <!-- The Framework Section -->
  <Section background="cream" padding="xl">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        The Framework: <span class="text-blue-600">What to Do vs. What Everyone Does</span>
      </h2>
      <p class="text-center text-gray-600 text-lg mb-12">
        Based on analyzing what actually works (not what sounds good in presentations)
      </p>

      <div class="space-y-6">
        {theFrameworkThatWorks.map((phase, index) => (
          <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-blue-700 text-white p-4">
              <h3 class="text-xl font-bold">{phase.phase}</h3>
            </div>
            <div class="p-6">
              <div class="grid md:grid-cols-3 gap-6">
                <div>
                  <p class="text-red-600 font-semibold mb-2">‚ùå What Most Do:</p>
                  <p class="text-gray-700">{phase.wrong}</p>
                </div>
                <div>
                  <p class="text-green-600 font-semibold mb-2">‚úì What Works:</p>
                  <p class="text-gray-700 font-medium">{phase.right}</p>
                </div>
                <div>
                  <p class="text-blue-600 font-semibold mb-2">üìä Result:</p>
                  <p class="text-gray-700">{phase.result}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </Section>

  <!-- Interactive ROI Calculator -->
  <Section background="white" padding="xl">
    <div class="max-w-3xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
        Calculate Your <span class="text-green-600">Realistic</span> ROI
      </h2>
      <p class="text-center text-gray-600 text-lg mb-12">
        Based on actual data, not vendor fantasies
      </p>

      <div class="bg-gradient-to-br from-blue-600 to-blue-800 text-white rounded-2xl p-8 shadow-2xl">
        <div class="grid md:grid-cols-2 gap-6 mb-8">
          <div>
            <label class="block text-white/90 mb-2 font-semibold">Team Size</label>
            <input
              type="number"
              id="teamSize"
              value="10"
              class="w-full px-4 py-3 rounded-lg text-gray-900 font-semibold text-lg"
            />
          </div>
          <div>
            <label class="block text-white/90 mb-2 font-semibold">Average Salary</label>
            <input
              type="number"
              id="avgSalary"
              value="120000"
              class="w-full px-4 py-3 rounded-lg text-gray-900 font-semibold text-lg"
            />
          </div>
        </div>

        <div class="space-y-6">
