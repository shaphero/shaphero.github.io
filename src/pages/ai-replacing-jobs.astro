const marketingEvolution = [
  {
    role: "Brand Building",
    before: "5 blog posts/month, limited reach",
    after: "50+ distinctive brand content pieces across 100+ channels",
    outcome: "10x mental availability"
  },
  {
    role: "Share of Voice Tracking",
    before: "Manual quarterly reports, $50K surveys",
    after: "AI monitors 100+ channels daily, real-time SOV",
    outcome: "Leading indicators visible monthly"
  },
  {
    role: "Creative Production",
    before: "3 campaigns/year, expensive agencies",
    after: "AI scales distinctive brand assets at speed",
    outcome: "Consistent brand codes everywhere"
  },
  {
    role: "ROMI Measurement",
    before: "Can't track long-term brand impact",
    after: "AI predicts 18-month ROMI from current metrics",
    outcome: "Prove brand building ROI to board"
  }
];

const amplificationAreas = [
  {
    area: "Mental Availability",
    how: "AI creates brand content across 100+ channels",
    result: "Build distinctive brand presence at scale"
  },
  {
    area: "Distinctive Brand Assets",
    how: "AI maintains consistent brand codes across all touchpoints",
    result: "Own specific colors/sounds/symbols category-wide"
  },
  {
    area: "Category Building",
    how: "AI scales educational content 10x",
    result: "Build the category, not just capture demand"
  },
  {
    area: "Measurement",
    how: "AI tracks SOV, awareness, consideration in real-time",
    result: "Prove long-term brand value"
  }
];
