          <div class="absolute left-0 right-0 h-1 bg-gradient-to-r from-gray-400 via-blue-400 to-green-400 top-1/2 transform -translate-y-1/2"></div>
          
          <!-- Timeline Points -->
          <div class="relative flex justify-between">
            {searchEvolution.map((era, idx) => (
              <div class="group cursor-pointer">
                <div class="relative">
                  <!-- Dot -->
                  <div class={`w-4 h-4 rounded-full bg-${era.color}-500 border-4 border-white shadow-lg transform transition-all group-hover:scale-150`}></div>
                  
                  <!-- Popup on Hover -->
                  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 opacity-0 group-hover:opacity-100 transition-all pointer-events-none bg-white p-4 rounded-lg shadow-xl min-w-[200px] z-10">
                    <p class="font-bold text-sm">{era.system}</p>
                    <p class="text-xs text-gray-600">{era.year}</p>
                    <p class="text-xs mt-1">{era.method}</p>
                    <p class="text-xs font-semibold mt-1">{era.queryVolume}</p>
                  </div>
                  
                  <!-- Label -->
                  <div class="absolute top-6 left-1/2 transform -translate-x-1/2 text-xs whitespace-nowrap">
                    <p class="font-semibold">{era.year}</p>
                  </div>
                </div>
