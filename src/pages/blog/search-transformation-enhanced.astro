---
import PageLayout from '../../layouts/PageLayout.astro';
import Section from '../../components/common/Section.astro';

// Data remains the same but presentation will be enhanced
const searchEvolution = [
  { year: "1990", system: "Archie", method: "FTP file indexing", queryVolume: "~1000/day", color: "#gray" },
  { year: "1993", system: "WebCrawler", method: "Full-text crawling", queryVolume: "~1M/day", color: "#gray" },
  { year: "1998", system: "Google PageRank", method: "Link analysis", queryVolume: "10K/day", color: "#blue" },
  { year: "2008", system: "Google Universal", method: "Blended results", queryVolume: "1B/day", color: "#blue" },
  { year: "2015", system: "RankBrain", method: "Machine learning", queryVolume: "3.5B/day", color: "#purple" },
  { year: "2023", system: "ChatGPT Search", method: "Generative synthesis", queryVolume: "200M/day", color: "#green" },
  { year: "2025", system: "Multi-modal AI", method: "Cross-domain reasoning", queryVolume: "2B/day (projected)", color: "#green" }
];
